        <!--Vous devez également déterminer si l'heure de retour est vide
         Si le livre a été emprunté n'a pas été rendu, le statut est 1, alors l'heure de retour = null
         Si le livre a été rendu et que le statut est 0, l'heure de retour n'est pas vide, qui est l'heure de retour du livre.
         -->
        <if test="bookInfo.status!=null and bookInfo.status==1">
          and book.status=1 and backDate is null
        </if>
        <if test="bookInfo.status!=null and bookInfo.status==0">
          and book.status=0 and backDate is not null
        </if>
      </if>
      <!--Requête basée sur readerNumber-->
      <if test="readerInfo!=null">
        <if test="readerInfo.readerNumber!=null and readerInfo.readerNumber!=''">
          and readerNumber like '%${readerInfo.readerNumber}%'
        </if>
      </if>
      <!--Rechercher par type de retour-->
